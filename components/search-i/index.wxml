<!--components/search-i/index.wxml-->
<view class="i-search">
  <view class="i-search-icon">
    <image src="../../icon/sousuo@2x.png"></image>
  </view>
  <view class="i-search-input">
    <input
      value="{{value}}"
      type="text"
      confirm-type="search"
      bindinput="_handleInput"
      placeholder="请输入歌手、歌名"
      placeholder-class="i-search-placeholder"></input>
  </view>
</view>
